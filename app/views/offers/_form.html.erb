<%= form_with(model: offer, local: true, multipart: true) do |form| %>
  <% if offer.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(offer.errors.count, "error") %> prohibited this offer from being saved:</h2>

      <ul>
      <% offer.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :title %>
    <%= form.text_field :title, id: :offer_title, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :category %>
    <%= form.text_field :category, id: :offer_category, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :price %>
    <%= form.text_field :price, id: :offer_price, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :description %>
    <%= form.text_area :description, id: :offer_description, class: 'form-control' %>
  </div>

  <!--<div class="form-group">
    <%= form.label :photos %>
    <%= form.text_field :photos, id: :offer_photos, class: 'form-control' %>
  </div>-->

 <div class="row">
   <div class="col-xs-6 col-md-3">
     <a href="#" class="thumbnail">
       <%= image_tag(offer.photo.url) unless offer.photo.file.nil? %>
     </a>
   </div>
 </div>

 <div class="form-group">
   <%= form.label :photo %>
   <%= form.file_field :photo, id: :offer_photo %>
 </div>
 <p>
   <label>
     <%= form.check_box :remove_photo %>
     Remove photo
   </label>
 </p>

 <%= form.hidden_field :photo_cache %>

  <%= form.submit nil, class: 'btn btn-success' %>
  <%= link_to 'Back', offers_path, class: 'btn btn-light' %>
<% end %>
